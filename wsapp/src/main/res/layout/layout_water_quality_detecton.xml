<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/margin_width200"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_width10"
    android:layout_marginBottom="@dimen/margin_width10"
    android:layout_marginRight="@dimen/margin_width10"
    android:layout_gravity="bottom|right"
    android:padding="@dimen/margin_width6"
    android:background="@drawable/shape_black_transparent">
    <LinearLayout
        android:id="@+id/id_tds_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_width10"
            android:background="@drawable/shape_blue_layout">
            <TextView
                android:id="@+id/id_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width12"
                android:text="实时水质监控"/>
            <TextView
                android:id="@+id/id_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv1"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width10"
                android:text="进水TDS值："/>
            <TextView
                android:id="@+id/id_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv2"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width10"
                android:text="出水TDS值："/>
            <TextView
                android:id="@+id/id_out_tds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv2"
                android:layout_toRightOf="@+id/id_tv3"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width10"
                android:text="5" />
            <TextView
                android:id="@+id/id_in_tds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv1"
                android:layout_toRightOf="@+id/id_tv2"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width10"
                android:text="50"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width10"
            android:background="#00ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_width10"
                android:text="TDS值(PPM)"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/title_tv"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_width10"
                android:text="水质"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/title_tv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="0~9"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/title_tv"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="纯净水"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/title_tv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="10~60"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/title_tv"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="山泉水、矿泉水"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/title_tv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="60~100"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/title_tv"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="净化水"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/title_tv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="100~300"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/title_tv"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="未净化水"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/title_tv"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="300以上"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/title_tv"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width20"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_width8"
                android:text="污染水"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>